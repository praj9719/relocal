<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/ls_card"
        app:cardElevation="1dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardElevation="0dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="120dp">
                <ImageView
                    android:id="@+id/ls_image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_marginVertical="5dp"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/ls_title"
                    android:padding="5dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:text="Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/ls_category"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_short_text"
                    android:drawablePadding="10dp"
                    android:text="Category"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/ls_location"
                    android:drawablePadding="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:drawableLeft="@drawable/ic_location"
                    android:text="location details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/ls_ratings"
                    android:layout_marginHorizontal="10dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_baseline_star_24"
                    android:text="4.1"
                    android:textAlignment="viewEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>