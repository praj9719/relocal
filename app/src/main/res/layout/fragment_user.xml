<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_blue"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/light_gray"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/fu_usercard"
        app:cardElevation="2dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="65dp"
            android:orientation="vertical"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/fu_username"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:padding="5dp"
                android:gravity="center"
                android:text="User Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/fu_email"
                    android:padding="5dp"
                    android:text="Email Address"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:drawablePadding="20dp"
                    android:drawableLeft="@drawable/ic_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/fu_phone"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:drawablePadding="20dp"
                    android:text="Phone Number"
                    android:drawableLeft="@drawable/ic_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/fu_message"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:text="Message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="50dp"
        app:cardPreventCornerOverlap="true"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:padding="5dp"
        android:elevation="5dp"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/fu_profile"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/fu_edit"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/ic_edit"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_below="@id/fu_usercard"
        android:layout_margin="10dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/fu_services_head"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:text="Services"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/fu_btn_add"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_add"
                    android:textColor="@color/blue"
                    android:text="Add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fu_recycler"
                android:layout_below="@id/fu_services_head"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/fu_img_empty"
                android:visibility="visible"
                android:layout_margin="5dp"
                android:layout_below="@id/fu_services_head"
                android:scaleType="fitCenter"
                android:src="@drawable/empty"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ProgressBar
                android:id="@+id/fu_progress"
                android:visibility="invisible"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:background="@color/light_gray"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </LinearLayout>
</RelativeLayout>